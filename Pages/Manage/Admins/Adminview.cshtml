@page
@model SunuerManageEn.Pages.Manage.Admins.AdminviewModel
@{
}

<div class="layui-form" lay-filter="layuiadmin-app-form-list" id="layuiadmin-app-form-list" style="padding: 20px 30px 0 0;">


    <div class="layui-form-item">
        <label class="layui-form-label">Login Name</label>
        <div class="layui-input-inline input-inline">
            <input type="text" name="AdminName" lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Model.AdminName" disabled>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">Nickname</label>
        <div class="layui-input-inline input-inline">
            <input type="text" name="AdminNick" lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Model.AdminNick" disabled>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">Permissions</label>
        <div class="layui-input-inline input-inline">
            <input type="text" name="RolesTitle" lay-verify="required" autocomplete="off" class="layui-input" value="@Model.Model.RolesTitle" disabled>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">User Status</label>
        <div class="layui-input-inline input-inline">
            <input type="radio" name="Statues" value="0" title="Active" lay-filter="Statues" @(Model.Model.Statues == 0 ? "checked" : "") disabled>
            <input type="radio" name="Statues" value="1" title="Frozen" lay-filter="Statues" @(Model.Model.Statues == 1 ? "checked" : "") disabled>
        </div>
    </div>
</div>
