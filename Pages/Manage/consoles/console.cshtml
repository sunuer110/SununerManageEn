@page
@model SunuerManageEn.Pages.Manage.consoles.consoleModel
@{
}
<script src="~/js/echarts.min.js"></script>
<style>
    .layui-carousel > [carousel-item] > * {
        display: block;
    }
    .td{ width:140px;}
</style>
<div class="layui-fluid">
    <div class="layui-row layui-col-space15">
        <div class="layui-col-md8">
            <div class="layui-row layui-col-space15">
                <div class="layui-col-md6">
                    <div class="layui-card">
                        <div class="layui-card-header">Method</div>
                        <div class="layui-card-body">

                            <div class="layui-carousel layadmin-carousel layadmin-shortcut">
                                <div carousel-item>
                                    <ul class="layui-row layui-col-space10">
                                        @if (Model.AdminModel.Roles.IndexOf("|5|") > -1)
                                        {
                                            <li class="layui-col-xs3">
                                                <a lay-href="Admins/AdminRolesList">
                                                    <i class="layui-icon layui-icon-app"></i>
                                                    <cite>Role Manage</cite>
                                                </a>
                                            </li>
                                        }
                                        @if (Model.AdminModel.Roles.IndexOf("|9|") > -1)
                                        {
                                            <li class="layui-col-xs3">
                                                <a lay-href="Admins/AdminList">
                                                    <i class="layui-icon layui-icon-user"></i>
                                                    <cite>Administrator Manage</cite>
                                                </a>
                                            </li>
                                        }
                                        @if (Model.AdminModel.Roles.IndexOf("|24|") > -1)
                                        {
                                            <li class="layui-col-xs3">
                                                <a lay-href="ManageSets/ManageSetEdt">
                                                    <i class="layui-icon layui-icon-set"></i>
                                                    <cite>System Settings</cite>
                                                </a>
                                            </li>
                                        }
                                        @if (Model.AdminModel.Roles.IndexOf("|15|") > -1)
                                        {
                                            <li class="layui-col-xs3">
                                                <a lay-href="Admins/AdminPassWord">
                                                    <i class="layui-icon layui-icon-template-1"></i>
                                                    <cite>Change password</cite>
                                                </a>
                                            </li>
                                        }
                                        @if (Model.AdminModel.Roles.IndexOf("|17|") > -1)
                                        {
                                            <li class="layui-col-xs3">
                                                <a lay-href="Articless/ArticleCategoryList">
                                                    <i class="layui-icon layui-icon-chat"></i>
                                                    <cite>Article Category</cite>
                                                </a>
                                            </li>
                                        }
                                        
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="layui-col-md6">
                    <div class="layui-card">
                        <div class="layui-card-header">Management</div>
                        <div class="layui-card-body">

                            <div class="layui-carousel layadmin-carousel layadmin-backlog">
                                <div carousel-item>
                                    <ul class="layui-row layui-col-space10 ct2_hd">
                                         @foreach (var item in Model.List)
                                         {
                                                <li class="layui-col-xs3">
                                                <a lay-href="Articless/ArticlesList?BigID=@item.BigID" lay-text="@item.BigTitle">
                                                    <h3>@item.BigTitle</h3>
                                                    <p><cite>@item.Number</cite></p>
                                                 </a>
                                              </li>
                                         }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-col-md12">
                    <div class="layui-card">
                        <div class="layui-card-header">Data Overview</div>
                        <div class="layui-card-body">
                           
                            <div id="container" style="height: 400px"></div>
                        </div>
                    </div>
                </div>

                <div class="layui-col-md12">
                    <div class="layui-card" style="height:600px; overflow:auto;">
                        <iframe src="@Model.url" frameborder="0" class="layadmin-iframe" sandbox="allow-scripts  allow-same-origin" style="width:100%; height:100%;"></iframe>
                    </div>
                </div>
            </div>
        </div>

        <div class="layui-col-md4">
             <div class="layui-card">
                <div class="layui-card-body layui-text">
